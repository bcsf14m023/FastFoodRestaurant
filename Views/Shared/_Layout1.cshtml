<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <!--To set icon-->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/main.css" rel="stylesheet" type="text/css">
    <link href="~/Content/footer.css" rel="stylesheet" type="text/css">
    <link href="~/Content/modalDialogs.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css">
    <link href="~/Content/login.css" rel="stylesheet" type="text/css">
    <link href="~/Content/nav.css" rel="stylesheet" type="text/css">    
    <!-- css-files -->
    @RenderSection("css", required: false)

    <script type="text/javascript" src="~/scripts/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/scripts/modalFunctions.js"></script>
    <script type="text/javascript" src="~/scripts/year.js"></script>
    <script type="text/javascript" src="~/scripts/changePasswd.js"></script>

    <!--script-->
    @RenderSection("script", required: false)
</head>
<body>
    @Html.Partial("_nav")
    
    @RenderBody()
    
    @Html.Partial("_footer")
    @Html.Partial("modalDialogs")
</body>
</html>
